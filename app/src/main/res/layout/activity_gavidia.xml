<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.proyecto.paginas.gavidia">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="10dp">

            <include layout="@layout/toolbar"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="100dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="10dp">

                    <android.support.v4.view.ViewPager
                        android:id="@+id/container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

                    <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/id"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/textViewIdgavidia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="1"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:visibility="invisible" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="50dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="top|center">

                    <TextView
                        android:id="@+id/nombregavidia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="bottom|center"
                        android:padding="10dp"
                        android:text="Nombre U"
                        android:textColor="@color/Brown"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/textView3"
                        android:gravity="bottom|center"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="@string/mision"
                        android:textColor="@color/Amber"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom|center">

                    <TextView
                        android:id="@+id/misiongavidia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:text="@string/vision"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/Brown"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="bottom|center"
                        android:text="@string/vision"
                        android:textColor="@color/Amber"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom|center">

                    <TextView
                        android:id="@+id/visiongavidia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView3"
                        android:layout_toEndOf="@+id/textView3"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="Texto Vision"
                        android:padding="6dp"
                        android:textColor="@color/Brown"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom|center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/textView3"
                        android:gravity="bottom|center"
                        android:text="@string/carreras"
                        android:textColor="@color/Amber"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom|center">

                    <TextView
                        android:id="@+id/carrerasgavidia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView3"
                        android:layout_toEndOf="@+id/textView3"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:padding="6dp"
                        android:text="Carreras gavidia"
                        android:textColor="@color/Brown"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom|center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/textView3"
                        android:gravity="bottom|center"
                        android:text="@string/telefono"
                        android:textColor="@color/Amber"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom|center">

                    <TextView
                        android:id="@+id/telefonogavidia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView3"
                        android:layout_toEndOf="@+id/textView3"
                        android:padding="6dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="Telefono gavidia"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/Brown"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom|center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/textView3"
                        android:gravity="bottom|center"
                        android:text="@string/direccion"
                        android:textColor="@color/Amber"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom|center">

                    <TextView
                        android:id="@+id/direcciongavidia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView3"
                        android:layout_toEndOf="@+id/textView3"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="Dirección gavidia"
                        android:textColor="@color/Brown"
                        android:padding="6dp"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom|center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/textView3"
                        android:gravity="bottom|center"
                        android:text="Sitio Web"
                        android:textColor="@color/Amber"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom|center">

                    <TextView
                        android:id="@+id/webgavidia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView3"
                        android:layout_toEndOf="@+id/textView3"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="Sitio web"
                        android:textColor="@color/Brown"
                        android:autoLink="web"
                        android:padding="6dp"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </TableRow>

                <!--  coordenadas -->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom|center">


                    <TextView
                        android:id="@+id/latitudgavidia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView3"
                        android:layout_toEndOf="@+id/textView3"
                        android:autoLink="web"
                        android:padding="6dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="Latitud"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/Brown"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </TableRow>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom|center">


                    <TextView
                        android:id="@+id/longitudgavidia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView3"
                        android:layout_toEndOf="@+id/textView3"
                        android:autoLink="web"
                        android:padding="6dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="Longitud"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/Brown"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </TableRow>

                <!-- fin coordenadas -->

            </TableLayout>
            <Button
                android:id="@+id/mapa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="30dp"
                android:background="@color/Amber"
                android:text="@string/ver"
                android:textAllCaps="false"
                android:textColor="@color/Amber1"
                android:textSize="18dp"
                android:layout_marginTop="450dp"
                 />
                </RelativeLayout>
            </ScrollView>

        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>
